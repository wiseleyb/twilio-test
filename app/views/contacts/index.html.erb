<h1>Listing contacts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Group</th>
      <th>Name</th>
      <th>Phone</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.user_id %></td>
        <td><%= contact.group %></td>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= link_to 'Show', contact, class: "btn btn-info btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-warning btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, class: "btn btn-danger btn-primary btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path, class: "btn btn-default btn-primary btn-sm" %>
