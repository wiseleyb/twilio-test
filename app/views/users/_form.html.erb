<% @user ||= User.new # allow this form to be placed anywhere %>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <% if @user.new_record? %>
    <div class="field form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>

  <fieldset>
    <legend>Twilio Settings</legend>

    <p># TODO - add a helper page on where to find these after signing up on
      Twilio. Also - maybe add some JS to make this expand collapse and a
      note that explains this is optional.</p>

    <div class="field form-group">
      <%= f.label :twilio_account_sid %><br>
      <%= f.text_field :twilio_account_sid %>
    </div>

    <div class="field form-group">
      <%= f.label :twilio_auth_token %><br>
      <%= f.text_field :twilio_auth_token %>
    </div>

    <div class="field form-group">
      <%= f.label :twilio_phone_number %><br>
      <%= f.text_field :twilio_phone_number %>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit (@user.new_record? ? "Signup" : "Update"), id: 'sigup' %>
  </div>
<% end %>
