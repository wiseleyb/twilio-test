<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-info btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, class: "btn btn-danger btn-primary btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
